{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "brightness-tray",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "setSize": true,
        "hide": true
      }
    },
    "systemTray": {
      "iconPath": "icons/light.ico"
    },
    "bundle": {
      "identifier": "io.misakikasumi.brightness-tray",
      "publisher": "Misaki Kasumi",
      "shortDescription": "Manage the brightness of monitors from your system tray",
      "category": "Utility",
      "icon": [
        "icons/light.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "panel",
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "width": 350,
        "height": 200,
        "visible": false,
        "focus": false
      }
    ]
  }
}
